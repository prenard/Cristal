<resources>
	<layout id="WatchFace">
		<drawable class="Background" />

		<drawable id="LeftGoalMeter" class="GoalMeter">
			<param name="side">:left</param>
			<param name="stroke">4</param>
			<param name="height">240</param>
			<param name="separator">2</param>
		</drawable>

		<drawable id="RightGoalMeter" class="GoalMeter">
			<param name="side">:right</param>
			<param name="stroke">4</param>
			<param name="height">240</param>
			<param name="separator">2</param>
		</drawable>

		<drawable id="DataArea" class="DataArea">
			<param name="locX">65</param>
			<param name="width">205</param>
			<param name="row1Y">306</param>
			<param name="row2Y">330</param>
			<param name="goalIconY">310</param>
			<param name="goalIconLeftX">25</param>
			<param name="goalIconRightX">305</param>
		</drawable>

		<drawable id="DataFields" class="DataFields">
			<param name="left">60</param>
			<param name="right">250</param>
			<param name="top">20</param>
			<param name="bottom">58</param>
			<param name="batteryWidth">28</param>
		</drawable>

		<drawable id="Date" class="DateLine">
			<param name="y">100</param>
		</drawable>

		<drawable id="Indicators" class="Indicators">
			<param name="locX">24</param>
			<param name="locY">170</param>
			<param name="spacingY">50</param>
			<param name="batteryWidth">20</param>
		</drawable>

		<drawable id="Time" class="ThickThinTime">
			<param name="adjustY">2</param>
			<param name="secondsX">230</param>
			<param name="secondsY">215</param>
			<param name="amPmOffset">6</param>
		</drawable>

		<drawable id="MoveBar" class="MoveBar">
			<param name="x">50</param>
			<param name="y">250</param>
			<param name="width">175</param>
			<param name="height">11</param>
			<param name="separator">3</param>
		</drawable>
	</layout>

	<!-- Shown in low power mode -->
	<layout id="AlwaysOn">
		<drawable id="AlwaysOnDisplay" class="AlwaysOnDisplay">
			<param name="burnInYOffsets">[-38, -19, 19, 38]</param>
			<param name="adjustY">-2</param>
			<param name="timeY">150</param>
			<param name="lineY">200</param>
			<!-- Allow room for Chinese date -->	
			<param name="lineWidth">162</param>
			<!-- param name="lineStroke">2</param -->	
			<param name="dataY">230</param>
			<param name="dataLeft">49</param>
		</drawable>
	</layout>
</resources>
